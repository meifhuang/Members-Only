<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        Members Only
    </title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-light mb-5 py-4 main-nav">
        <div class="container-fluid">
            <a class="navbar-brand mb-0 h1 navtitle" href="/1">Members<b>Only</b></a>
            <% if (user) {%>
                <div class="d-flex">
                    <a href="/message-form"><button class="btn me-3">+ New Message</button></a>
 
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="account" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Account
                        </button>
                        <div class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="account">
                            <b> Logged in as </b>
                            <p>
                                <%= user.email %>
                            </p>
                            <hr class="dropdown-divider">
                            <b> Member status: </b>
                            <% if (user.member) { %>
                                <p> Member </p>
                                <% } else { %>
                                    <p> Not a member - <button class="btn" data-bs-toggle="modal" data-bs-target="#joinclub" type="button" style="background-color: #6FB3B8"> Join club
                                        </button></p>
                                    <% } %>
                                        <hr class="dropdown-divider">
                                        <a href="/log-out" style="color: #6FB3B8"> LOG OUT </a>

                        </div>
                    </div>

                    <% } else {%>
                        <div class="ms-auto">
                            <button class="btn btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#login" type="button"> Login </button>
                            <button class="btn btn-secondary me-2 " data-bs-toggle="modal" data-bs-target="#signup" type="button">Sign Up</button>
                        </div>
                        <%}%>
                </div>
    </nav>


    <%- include('login') %>

    <%- include('sign-up') %>

    <%- include('join-club') %>

  