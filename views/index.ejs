<%- include('partials/navbar') %>


    <% if (method === "POST" && errors && errors.length >= 1) {%>
        <div class="alert alert-danger col-4  text-center offset-4" role="alert">
        <ul> 
        <% for (let err of errors) {%>
            <li>  <%= err.msg %>  </li>
        <%}%>
        </ul>
    </div>
    <%} else if (method === "POST" && signupSuccess) { %>
        <div class="alert alert-success col-4 offset-4 text-center" role="alert">
            Successfully signed up. You may now log in. 
        </div>
        <% } else if (method==="GET" && loginError) {%>
             <div class="alert alert-danger col-4 offset-4 text-center" role="alert">
                Incorrect email or password. Please try again!
             </div>
    
             <% } else if (method==="POST" && !success) {%>
                <div class="alert alert-danger text-center col-4 offset-4" role="alert">
                   Incorrect code. You can try again. 
                </div>
            <% } else if (method==="POST" && success ) {%>
                    <div class="alert alert-success text-center col-6 offset-3" role="alert">
                       Congrats!! You're a member now! See who wrote these messages! <a href="messages/1"> messages </a>
                    </div>

    <%} else { %>
    <div class="card text-center col-4 offset-4">
        <div class="card-header">
          Welcome
        </div>
        <div class="card-body">
          <h5 class="card-title">Message Board</h5>
          <p class="card-text">Click below to view all messages</p>
          <a href="/messages/1" class="btn btn-secondary">Messages</a>
        </div>
      </div>
    </div>
    <% } %> 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous">
    </script>

    </body>

</html>
